@model IEnumerable<CoverType>
@{
    ViewData["Title"] = "Index";
}
<div class="container p-3">
        <div class="row pt-4">
            <div class="col-6">
            <h2 class="text-primary">Cover Type List</h2>
            </div>
        <div class="col-6 text-end">
            <a asp-controller="CoverType" asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle"></i>&nbsp;Create New Cover Type</a>
        </div>
        </div>
        <br /><br />

<table class="table table-hover table-bordered" style="width:100%">
    <thead>
        <tr>
            <th>ID</th>
            <th>Cover Type Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="10%">@obj.Id</td>
                <td width="40%">@obj.Name</td>
                    <td class="text-center" width="40%">
                    <div class="btn-group" role="group">
                            <a class="btn btn-primary mx-2" asp-controller="CoverType" asp-action="Edit" asp-route-id="@obj.Id"><i class="bi bi-pencil-square"></i>Edit</a>
                            <a class="btn btn-danger mx-2" asp-controller="CoverType" asp-action="Delete" asp-route-id="@obj.Id"><i class="bi bi-trash"></i>Delete</a>
                    </div>
                    </td>
            </tr>
        }
    </tbody>
</table>


</div>