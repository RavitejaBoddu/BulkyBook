@model CoverType
@{
    ViewData["Title"] = "Edit";
}

<form method="post" asp-action="Edit">
    <div class="border p-3 m-4">
        <div class="row p-2">
            <h2 class="text-primary">Edit Cover Type </h2>
            <hr />
        </div>
        @*<div asp-validation-summary="All"></div>*@
        <div class="m-3">
            <label asp-for="Id"></label>
            <input asp-for="Id" disabled class="form-control" />
        </div>
        <div class="m-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="m-3 text-end">
            <button type="submit" class="btn btn-primary me-3" style="width:150px">Update</button>
            <a asp-controller="CoverType" asp-action="Index" class="btn btn-secondary" style="width: 150px">Back to List</a>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


