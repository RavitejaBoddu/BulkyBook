@model IEnumerable<Product>

<div class="books-container">
    @foreach(var product in Model)
    {
        <div class="col-lg-2 col-md-3" style="height:450px; width: 270px;">
            <div class="row m-2">
                <div class="col-12 p-1" style="border:1px solid #008cba; border-radius: 5px;">
                    <div class="card">
                        <img src="@product.ImageUrl" class="card-img-top rounded" style="height:250px;" />
                        <div class="card-body">
                        <div class="pl-1">
                            <p class="card-title h6 text-primary">@product.Title</p>
                            <p class="card-title text-info">by @product.Author</p>
                        </div>
                        <div class="pl-1">
                                <p class="m-0">List Price:<strike><b>₹@product.ListPrice.ToString("0.00")</b></strike></p>
                        </div>
                        <div class="pl-1">
                            <p class="m-0">As low as:<b>₹@product.Price.ToString("0.00")</b></p>
                        </div>
                        </div>
                    </div>
                    <div>
                        <a asp-action="Details" class="btn btn-dark form-control" asp-route-productId="@product.Id">Details</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
